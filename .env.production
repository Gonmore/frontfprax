# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN - FRONTEND
# ===========================================

# 🏭 ENTORNO
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# 🔗 API URLs
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WEBSOCKET_URL=wss://api.your-domain.com

# 🔐 AUTENTICACIÓN
NEXT_PUBLIC_JWT_STORAGE_KEY=ausb_auth_token

# 🌍 LOCALIZACIÓN
NEXT_PUBLIC_DEFAULT_LOCALE=es
NEXT_PUBLIC_SUPPORTED_LOCALES=es,en

# 📊 ANALYTICS (opcional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# 🔒 SEGURIDAD
NEXT_PUBLIC_ALLOWED_DOMAINS=your-domain.com,www.your-domain.com

# 🚀 PERFORMANCE
NEXT_PUBLIC_CACHE_MAX_AGE=3600
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# 🔔 NOTIFICACIONES
NEXT_PUBLIC_NOTIFICATION_TIMEOUT=5000
NEXT_PUBLIC_MAX_NOTIFICATIONS=50

# 🎨 BRANDING
NEXT_PUBLIC_APP_NAME=FPRAX - Plataforma de Prácticas
NEXT_PUBLIC_APP_DESCRIPTION=Conectamos estudiantes, empresas y centros educativos
NEXT_PUBLIC_COMPANY_NAME=FPRAX
NEXT_PUBLIC_SUPPORT_EMAIL=soporte@fprax.com